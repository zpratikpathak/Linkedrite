# LinkedRite SaaS Application Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================
# Django Configuration
# ===========================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================
# Default Admin Account (Optional)
# ===========================
# Admin account is automatically created/updated on first request after server startup
# The password will ALWAYS be updated to match what's here
# WARNING: Use strong passwords in production!
# ADMIN_EMAIL=admin@linkedrite.com
# ADMIN_PASSWORD=change-this-secure-password
# ADMIN_FIRST_NAME=Admin
# ADMIN_LAST_NAME=User

# ===========================
# Database Configuration
# ===========================
# Option 1: Use DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/linkedrite
# DATABASE_URL=mysql://username:password@localhost:3306/linkedrite
# DATABASE_URL=sqlite:///path/to/db.sqlite3

# Option 2: Use individual database settings
# DB_ENGINE=django.db.backends.postgresql
# DB_ENGINE=django.db.backends.mysql
# DB_ENGINE=django.db.backends.sqlite3  (default)
# DB_NAME=linkedrite
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432  # 5432 for PostgreSQL, 3306 for MySQL

# If no database settings are provided, SQLite will be used with db.sqlite3

# ===========================
# Azure OpenAI API Configuration
# ===========================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2025-01-02-preview

# Legacy names (for backward compatibility)
AZURE_API_ENDPOINT=https://your-resource.openai.azure.com/
API_VERSION=2023-12-01-preview
DEPLOYMENT_MODEL=your-deployment-model-name

# ===========================
# Email Configuration (SMTP)
# ===========================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=LinkedRite <noreply@linkedrite.com>

# ===========================
# Redis Configuration (Optional)
# ===========================
# REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# Cache Configuration (optional - uses Redis if configured)
# CACHE_TTL=300  # Cache timeout in seconds (default: 300)
# REDIS_SESSION_BACKEND=True  # Use Redis for session storage (default: False)

# ===========================
# Stripe Configuration (For Future Use)
# ===========================
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===========================
# Optional Settings
# ===========================
# Timezone settings
USE_TZ=True
TIME_ZONE=UTC

# Site URL (used in emails)
SITE_URL=http://localhost:8000

# Static files settings (for production)
# STATIC_URL=/static/
# STATIC_ROOT=/path/to/staticfiles

# Media files settings
# MEDIA_URL=/media/
# MEDIA_ROOT=/path/to/media

# ===========================
# Security Settings (Production)
# ===========================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True

# ===========================
# Social Auth (Future Implementation)
# ===========================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===========================
# AWS S3 (For Media Storage - Optional)
# ===========================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ===========================
# Monitoring & Analytics (Optional)
# ===========================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X
